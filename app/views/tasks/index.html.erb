<table>
    <tr>
        <th>Status</th>
        <th>Task</th>
        <th>Deadline</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <% @tasks.each do |t| %>
        <tr>
            <!-- 狀態，編輯以及刪除的按鈕放入helper，是不要有判斷的工作在view進行 -->
            <td>
                <%= todo_check_button(t)%>
            </td>
            <!--task name 包含了shoㄊ功能  -->
            <td>
                <%= link_to t.name, task_path(t) %>
            </td>
            <td>
                <%= t.date%>
            </td>
            <td>
                <%= todo_edit_button(t) %>
            </td>
            <td>
                <%= todo_delete_button(t) %>
            </td>
        </tr>
    <% end %>
</table>

<%= link_to 'New Task', new_task_path%>
