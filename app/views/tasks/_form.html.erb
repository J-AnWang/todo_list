<div class="errorbox">
    <% if @task.errors.any? %>
        <!-- pluralize是個helper，用來顯示一個字串，前面的參數是數字，後面是要顯示的單數名詞，他會自動轉換成複數  -->
        <div>
            <h3>You have <%= pluralize(@task.errors.count, "error") %></h3>
        </div>
        <ul class="errorlist">
            <% @task.errors.full_messages.each do |msg|%>
                <li >
                    <%= msg%>
                </li>
            <% end %>
        </ul>
    <% end %>
</div>

<div>
    <%= form_for @task do |f|%>
<div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name%>
</div>
<div>
    <%= f.label :date, "Deadline" %>
    <%= f.text_field :date%>
</div>
<div>
    <%= f.label :note, "Note" %>
    <%= f.text_area :note%>
</div>
    <%= f.submit %>
    <% end %>
    <%= link_to "Back to index", tasks_path%>
</div>
